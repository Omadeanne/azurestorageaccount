{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "name-of-storage-acc": {
        "type": "string",
        "metadata": {
            "description": "Enter the name the name of the storage account here."
        }
      }  
    },
    "functions": [],
    "variables": {},
    "resources": [{
    "name": "[parameters('name-of-storage-acc')]",
        "type": "Microsoft.Storage/storageAccounts",
        "apiVersion": "2023-01-01",
        "tags": {
            "displayName": "[parameters('name-of-storage-acc')]"
        },
        "location": "[resourceGroup().location]",
        "kind": "StorageV2",
        "sku": {
            "name": "Premium_LRS",
            "tier": "Premium"
        }
    }],
    "outputs": {}
}